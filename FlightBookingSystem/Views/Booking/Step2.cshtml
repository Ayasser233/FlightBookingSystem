@model IEnumerable<Flight>

@{
    ViewData["Title"] = "Step 2: Available Flights";
}

<h2>Step 2: Available Flights</h2>

<table class="table">
    <thead>
        <tr>
            <th>Flight ID</th>
            <th>From</th>
            <th>To</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var flight in Model)
        {
            <tr>
                
                <td>@flight.FlightNumber</td>
                <td>@flight.DepartureAirport</td>
                <td>@flight.ArrivalAirport</td>
                <td>@flight.DepartureTime.ToShortDateString()</td>
                <td>
                    <form asp-action="Step2" method="post">
                        <input type="hidden" name="flightId" value="@flight.FlightId" />
                        <input type="submit" value="Select Flight" class="btn btn-primary" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Step1" class="btn btn-secondary">Back to Search</a>
