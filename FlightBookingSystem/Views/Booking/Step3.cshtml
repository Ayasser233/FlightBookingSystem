@model List<PassengerDto>

@{
    ViewData["Title"] = "Step 3: Passenger Information";
}

<h2>Step 3: Passenger Information</h2>

<form asp-action="Step3" method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <h4>Passenger @i+1</h4>
        <div class="form-group">
            <label asp-for="@Model[i].FullName"></label>
            <input asp-for="@Model[i].FullName" class="form-control" />
            <span asp-validation-for="@Model[i].FullName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model[i].PassportNumber"></label>
            <input asp-for="@Model[i].PassportNumber" class="form-control" />
            <span asp-validation-for="@Model[i].PassportNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model[i].DateOfBirth"></label>
            <input asp-for="@Model[i].DateOfBirth" class="form-control" />
            <span asp-validation-for="@Model[i].DateOfBirth" class="text-danger"></span>
        </div>
    }

    <input type="submit" value="Continue to Payment" class="btn btn-primary" />
</form>

<a asp-action="Step2" class="btn btn-secondary">Back to Select Flight</a>
