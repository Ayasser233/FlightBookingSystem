@model FlightBookingSystem.DTOs.FlightSearchDto

@{
    ViewData["Title"] = "Step 1: Flight Search";
}

<h2>Step 1: Search for Flights</h2>

<form asp-action="Step1" method="post">
    <div class="form-group">
        <label asp-for="FromAirport"></label>
        <input asp-for="FromAirport" class="form-control" />
        <span asp-validation-for="FromAirport" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ToAirport"></label>
        <input asp-for="ToAirport" class="form-control" />
        <span asp-validation-for="ToAirport" class="text-danger"></span>
    </div>
    <div class="form-group col-3">
        <label asp-for="FlightDate" class="col-form-label col-sm-2"></label>
        <div class="col-sm-10">
            <input asp-for="FlightDate" type="date" class="form-control form-control-sm" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="FlightDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group col-3">
        <label  asp-for="NumberOfPassengers">Number of Passengers</label>
        <input type="number" asp-for="NumberOfPassengers" class="form-control" min="1" />
         <span  asp-for="NumberOfPassengers" class="text-danger"></span>
    </div>
    <div class="form-group col-2">
        <label asp-for="SeatClass"></label>
        <select asp-for="SeatClass" class="form-control">
            <option value="Economy">Economy</option>
            <option value="Business">Business</option>
        </select>
    </div>
     
    <input type="submit" value="Search Flights" class="btn btn-primary" />
</form>

<a asp-action="Index" class="btn btn-secondary">Back</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
