<!DOCTYPE html>
<html lang="en">
<head  >
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FlightBookingSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/FlightBookingSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    
</head>
<style>

    .footer {
        flex-shrink: inherit;
        background-color: black;
        padding: 10px 0;
        
    }

    .footer-content {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        align-items: center;
        color: aliceblue;
    }

    .footer-links {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
    }

        .footer-links a {
            color: #6c757d;
            text-decoration: none;
        }

            .footer-links a:hover {
                color: #007bff;
            }

    .fa-cc-visa {
        font-size: 24px; /* Change the size to your desired value */
    }

    .fa-cc-mastercard {
        font-size: 24px; /* Change the size to your desired value */
    }

    .fa-paypal {
        font-size: 24px; /* Change the size to your desired value */
    }



    .footer-icons svg {
        fill: currentColor;
    }

    .footer-links, .social-icons {
        margin-top: 20px;
    }
</style>
<body>
    <header class="header">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FlightBookingSystem</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Controllers
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="User" asp-action="Login">User</a></li> 
                                <li><a class="dropdown-item" asp-area="" asp-controller="Flight" asp-action="Index">Flight</a></li>
                                <li>
                                <a class="dropdown-item" asp-area="" asp-controller="Payment" asp-action="Index">Payment</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Booking" asp-action="Step1">Booking</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer ">
        <div class="container">
            <div class="footer-content">
                <div>&copy; 2024 - FlightBookingSystem</div>
                <div class="footer-links">
                    <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    <a asp-area="" asp-controller="User" asp-action="Login">Login</a>
                    
                </div>
                <div class="footer-icons  flex-column">
                    <i class="fa-brands fa-cc-visa p-2"></i>
                    <i class="fa-brands fa-cc-mastercard p-2"></i>
                    <i class="fa-brands fa-paypal" p-2></i>
                    
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
